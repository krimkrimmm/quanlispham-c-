@model TMDT.Models.Donhang

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>@Html.DisplayNameFor(model => model.IsSuccess)</th>
            <td>@Html.DisplayFor(model => model.IsSuccess)</td>
        </tr>
        <tr>
            <th>Id sản phẩm</th>
            <th>Tên sản phẩm</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Màu sắc</th>
            <th>Kích cỡ</th>
        </tr>
        @if (Model.ProductOrders != null && Model.ProductOrders.Any())
        {
            foreach (var item in Model.ProductOrders)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Number</td>
                    <td>@item.Price</td>
                    <td>@item.Color</td>
                    <td>@item.Size</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">Không có sản phẩm nào trong đơn hàng.</td>
            </tr>
        }
        <tr>
            <th>@Html.DisplayNameFor(model => model.Message)</th>
            <td>@Html.DisplayFor(model => model.Message)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tennguoinhan)</th>
            <td>@Html.DisplayFor(model => model.Tennguoinhan)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Diachi)</th>
            <td>@Html.DisplayFor(model => model.Diachi)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Createtime)</th>
            <td>@Html.DisplayFor(model => model.Createtime)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TransactionId)</th>
            <td>@Html.DisplayFor(model => model.TransactionId)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Error)</th>
            <td>@Html.DisplayFor(model => model.Error)</td>
        </tr>
    </table>

    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a>
        <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
    </div>
</div>
