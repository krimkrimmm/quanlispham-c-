    <script>
        document.getElementById("btnsearch").addEventListener("click", function searchProduct() {
            var searchKey = document.getElementById("input").value;
            if (searchKey.length > 0) {
                window.location.href = "/Home/Search?key=" + searchKey;
            }
        });

        function showSuggestions(query) {
            const suggestionsBox = document.getElementById('suggestions');
            suggestionsBox.innerHTML = '';

            if (query.length === 0) {
                return;
            }

            $.ajax({
                url: '/Products/GetData',
                method: 'GET',
                data: { query: query },
                success: function (response) {
                    if (response && response.length > 0) {
                        suggestionsBox.style.display = 'block';
                        response.forEach(item => {
                            const suggestionItem = document.createElement('div');
                            suggestionItem.classList.add('suggestion-item');
                            suggestionItem.textContent = item.name; // Adjust based on your data structure
                            suggestionItem.onclick = () => selectSuggestion(item.name);
                            suggestionsBox.appendChild(suggestionItem);
                        });
                    } else {
                        suggestionsBox.style.display = 'none';
                    }
                },
                error: function () {
                    alert('Đã có lỗi xảy ra trong quá trình xử lý. Vui lòng thử lại sau.');
                }
            });
        }

        function selectSuggestion(value) {
            document.getElementById('input').value = value;
            document.getElementById('suggestions').innerHTML = '';
            document.getElementById('suggestions').style.display = 'none';
            searchProduct();
        }

        function Login() {
            alert('Đăng nhập để xem lịch sử thanh toán!');
            window.location.href = "/Identity/Account/Login";
        }
    </script>
