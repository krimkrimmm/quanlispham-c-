    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.add-to-cart').on('click', function () {
                var quantity = 1;
                var id = $(this).data('id');
                $.ajax({
                    url: '/Carts/AddToCart/' + id + '?quantity=' + quantity,
                    type: 'GET',
                    success: function (response) {
                        if (response.success === true) {
                            alert('Added to cart successfully');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        alert('Failed to <i class="fa-solid fa-shopping-cart"></i>');
                    }
                });
            });

            $('.add-to-favorites').on('click', function () {
                var id = $(this).data('id');
                $.ajax({
                    url: '/Whitelists/Addtofavorist/' + id,
                    type: 'GET',
                    success: function (response) {
                        if (response.success === true) {
                            alert('Added to favorites successfully');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        alert('Failed to add to favorites');
                    }
                });
            });

            $('.next-products').on('click', function () {
                // Select the first product in the main product list
                var nextProduct = $('#product-container .product').first().clone();

                // If there is a product to move
                if (nextProduct.length) {
                    // Append the product's HTML to the Flash Sale section
                    $('.product-container').append(nextProduct);
                }
            });
        });
